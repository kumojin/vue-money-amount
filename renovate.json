{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:all",
    "schedule:weekly"
  ],
  "automerge": true,
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchPackagePatterns": ["vue"],
      "matchUpdateTypes": ["major"],
      "groupName": "vue",
      "enabled": false
    },
    {
      "matchPackagePatterns": ["vue-loader"],
      "matchUpdateTypes": ["major"],
      "groupName": "vue-loader",
      "enabled": false
    }
  ]
}
